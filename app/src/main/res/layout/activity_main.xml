<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="konox.di_evaluacioninicial.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:paddingLeft="10dp"
    tools:paddingRight="10dp">

    <TextView
        android:text="DINT01"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Title"
        android:background="@android:color/holo_blue_bright"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent" />

    <ImageView
        app:srcCompat="@drawable/utad"
        android:scaleType="fitXY"
        android:id="@+id/imgView"
        android:layout_marginTop="14dp"
        android:layout_width="500dp"
        android:layout_below="@+id/textView_Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="95dp" />

    <Button
        android:text="Cambiar imagen"
        android:layout_width="wrap_content"
        android:id="@+id/btCambiarImg"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="45dp" />

    <TextView
        android:text="Modificar color de fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCambiarImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView3" />

    <Button
        android:text="Cambiar color"
        android:layout_width="wrap_content"
        android:id="@+id/btCambiarCLR"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/btCambiarImg"
        android:layout_alignStart="@+id/btCambiarImg"
        android:layout_alignRight="@+id/btCambiarImg"
        android:layout_alignEnd="@+id/btCambiarImg" />

    <TextView
        android:text="Ocultar imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCambiarCLR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView4" />

    <Button
        android:text="Eliminar imagen"
        android:layout_width="150dp"
        android:id="@+id/btDelImg"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/bt_Ocul"
        android:layout_alignBottom="@+id/bt_Ocul"
        android:layout_alignRight="@+id/btMostar"
        android:layout_alignEnd="@+id/btMostar"
        android:layout_alignLeft="@+id/btMostar"
        android:layout_alignStart="@+id/btMostar" />

    <Button
        android:text="Ocultar"
        android:layout_width="wrap_content"
        android:id="@+id/bt_Ocul"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignRight="@+id/btCambiarTxt"
        android:layout_alignEnd="@+id/btCambiarTxt" />

    <TextView
        android:text="Cambiar texto de cabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_Ocul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView6" />

    <TextView
        android:text="Hacer desaparecer la imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cambiar texto"
        android:layout_height="45dp"
        android:layout_below="@+id/textView6"
        android:id="@+id/btCambiarTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="Finalizar aplicaciÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btFinalizar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btMostar"
        android:layout_alignEnd="@+id/btMostar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Modificar imagen por otra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Mostrar"
        android:layout_height="45dp"
        android:id="@+id/btMostar"
        android:layout_width="150dp"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/btCambiarCLR"
        android:layout_alignEnd="@+id/btCambiarCLR" />

    <TextView
        android:text="Mostrar dialogo de proceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:paddingRight="5dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/btMostar"
        android:layout_alignEnd="@+id/btMostar" />

</RelativeLayout>
